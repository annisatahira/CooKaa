<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="anifatulannisa.app.cooka">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_fix"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_fix"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:theme="@style/AppThemeNoActionBar"
            android:name=".SplashActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.LAUNCHER"/>

            </intent-filter>

        </activity>

        <activity
            android:theme="@style/AppThemeMain"
            android:name=".MainActivity"/>

        <activity
            android:theme="@style/AppTheme"
            android:name=".DetailActivityBahan"
            android:label="Bahan Masakan"
            android:parentActivityName=".MainActivity"/>

        <activity
        android:theme="@style/AppTheme"
        android:name=".DetailActivityRempah"
        android:label="@string/detail_bahan"
        android:parentActivityName=".MainActivity"/>

        <activity
            android:theme="@style/AppTheme"
            android:name=".DetailActivityRecipe"
            android:label="Resep makanan"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:theme="@style/AppTheme"
            android:name=".DefaultActivity"
            android:label="Kembali ke Menu"
            android:parentActivityName=".MainActivity"/>




    </application>

</manifest>